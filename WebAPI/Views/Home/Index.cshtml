@{
    Layout = null;
}

<head>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Theme CSS -->
    <link href="~/Content/theme.css" rel="stylesheet" />

    <!-- Skin CSS -->
    <link href="~/Content/skins/default.css" rel="stylesheet" />

    <!-- Theme Custom CSS -->
    <link href="~/Content/theme-custom.css" rel="stylesheet" />
    <!-- Head Libs -->
    <script src="~/Scripts/modernizr.js"></script>

</head>
<body>

    <section class="body-sign">
        <div class="center-sign">

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs">Welcome</i></h2>
                </div>
                <div class="panel-body">
                    <a href=@Url.Action("Index", "Home") class="logo pull-left">
                        <img src="~/Imgs/Finite.jpg" height="54" />
                    </a>
                    <br />
                    <br />
                    <br />
                    <hr />
                    <h4>Finite is a three part enterprise financial planner application containing an mvc, api and xamarine portion.</h4>
                    <div style="display: flex; flex-direction: column; justify-content:space-between; align-items: center">
                        <div style="margin: 10px">
                            <a class="btn btn-primary btn-lg" href="/swagger/ui/index">Api</a>
                        </div>
                        <div style="margin: 10px">
                            <a class="btn btn-primary btn-lg" href="https://finiteplanner.azurewebsites.net/">MVC</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
